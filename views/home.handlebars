<!-- whatever goes here will render in the 'body' in main.handlebars-->
<div class="matchup-container">
  <h1 class="fight-title">Who would win in a fight?</h1>
    <div class="animal-container">
        <div class="button-wrapper">
            <button class="animal_1-button">{{ animal_1 }}</button>
        </div>
        <div class="or">OR</div>
        <div class="button-wrapper">
            <button class="animal_2-button">{{ animal_2 }}</button>
        </div>
    </div>
</div>
<div class="comments">
{{#each comments as |comment|}}
    <article class="comment-container">
      <div class="author">
          <h4>{{comment.author}}</h4>
      </div>
      <div class="comment">
          {{comment.comment}}
      </div>
    </article>
  {{/each}}
  <textarea placeholder="Voice your opinion!"></textarea>
  <button class="submit-btn">Submit</button>
</div>
